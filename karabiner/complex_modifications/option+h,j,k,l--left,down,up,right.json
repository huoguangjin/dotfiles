{
  "title": "option + h/j/k/l -> left/down/up/right",
  "maintainers": [
    "hgj"
  ],
  "rules": [
    {
      "description": "option + h/j/k/l -> left/down/up/right",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.sublimetext\\.3",
                "^com\\.google\\.android\\.studio",
                "^com\\.jetbrains\\..*"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.sublimetext\\.3",
                "^com\\.google\\.android\\.studio",
                "^com\\.jetbrains\\..*"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
